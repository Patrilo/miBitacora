


<header class="navigation">
	<h1 class="logo">Bitácora de viajes</h1>
	<nav>
		<ul class= "nav-bar">
		<li><%= link_to 'Crea tu Bitácora', new_bitacora_path %></li>
			
			<% if user_signed_in? %>
			
			<li><%= link_to 'Salir', destroy_user_session_path, method: :delete	%></li>
			<% else %>
			<li><%= link_to 'Regístrate', new_user_registration_path %></li>
			<li><%= link_to 'Identificate', new_user_session_path %></li>
			
			<% end %>							  	
		</ul>
	</nav>
</header>

<div class="bitacoras">

	<% @bitacoras.each do |bitacora| %>
		<article class="bitacora container">
			<li class = "list">
				<p class="bt-name"><%= bitacora.provincia%></p>

			</li>
			<li class = "list">Fecha: <%= bitacora.fecha %></li>
			<li class = "list"><%= bitacora.visitas%></li>
			<li class = "list"><%= bitacora.acompañantes %></li>
			<li class = "list"><%= bitacora.anecdotas%></li>
			<li class = "list"><%= bitacora.name %><li>

		</article>
		<article class="bitacora-btn">
			<button type="button" class="btn btn-danger letter"><%= link_to 'Eliminar', bitacora_path(bitacora),
		 			method: :delete, data:
		            {confirm: 'Estás seguro?'}
		            %></button>

			<button type="button" class="btn btn-info letter"><%= link_to 'Nueva Bitácora', new_bitacora_path %></button>
			

		</article>

		


	<% end %>
	
	<section class = "book container">
			
		<%= form_for(@bitacora) do |f| %>
	  <% if @bitacora.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@bitacora.errors.count, "error") %> prohibited this bitacora from being saved:</h2>

	      <ul>
	      <% @bitacora.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>



	 <div class="field">
	    <%= f.label :nombre %>
	    <%= f.text_field :name %>
	  </div>
	  <div class="field">
	    <%= f.label :provincia %>
	    <%= f.text_field :provincia %>
	  </div>
	  <div class="field">
	    <%= f.label :fecha %>
	    <%= f.text_field :fecha %>
	  </div>
	  <div class="field">
	    <%= f.label :visitas %>
	    <%= f.text_field :visitas %>
	  </div>
	  <div class="field">
	    <%= f.label :acompañantes %>
	    <%= f.text_field :acompañantes %>
	  </div>
	   <div class="field">
	    <%= f.label :anecdotas %>
	    <%= f.text_field :anecdotas %>
	  </div>

	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>




	</section>

	


</div>

