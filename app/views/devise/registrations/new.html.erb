  <section class = "registroBackground">


<h2 class = "encima"><b> Regístrate</b></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
    <section class = "register">

  
  <form class="form-horizontal" role="form">

  
   <div class="form-group input-group">
    <%= f.label :Nombre %><br />
    
    <%= f.text_field :name, autofocus: true, :class => "form-control", :placeholder =>"Escribe tu nombre" %>
  </div>
  

  <div class="form-group input-group">
    <%= f.label :Apellidos %><br />
    <%= f.text_field :lastname, autofocus: true, :class => "form-control", :placeholder => "Escribe tus apellidos" %>
  </div>
  
  <div class="form-group input-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class => "form-control",  :placeholder =>"Escribe tu email" %>
  </div>

  <div class="form-group input-group">
    <%= f.label :Contraseña %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> carácteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Escribe tu contraseña" %>
  </div>

  <div class="form-group input-group">
    <%= f.label :Confirmación_de_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Escribe tu contraseña" %>
  </div>

  <div class="">
    <%= f.submit "Regístrate", :class => "btn btn-warning", :style => "font-size: 25px" %>
   </div>

<% end %>

<%= render "devise/shared/links" %>

</section>

</section>


  
    
 